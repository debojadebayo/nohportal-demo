@page "/crm"
@using Microsoft.AspNetCore.Authorization
@using Shared.DTOs.CRM
@inject IHttpClientFactory HttpClientFactory
@* @attribute [Authorize] *@

<PageTitle>CRM</PageTitle>

<MudText Typo="Typo.h1">Customer Relationship Manager</MudText>

<p>WElcome to the CRM.</p>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private CustomerDto[]? customers;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = HttpClientFactory.CreateClient("api");
            customers = await client.GetFromJsonAsync<CustomerDto[]>("api/CRM/Customers");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching weather data: {ex.Message}");
        }
    }
}
