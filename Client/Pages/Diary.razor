        {
            [1] = new List<CustomCalendarItem<ScheduleDto>>()
            {
                new CustomCalendarItem<ScheduleDto>
                {
                Start = DateTime.Today.AddHours(1),
                End = DateTime.Today.AddHours(2),
                Data = new ScheduleDto { }
                },
                new CustomCalendarItem<ScheduleDto>
                {
                Start = DateTime.Today.AddHours(11),
                End = DateTime.Today.AddHours(12),
                Data = new ScheduleDto { }
                }
            },
            [2] = new List<CustomCalendarItem<ScheduleDto>>()
            {
                new CustomCalendarItem<ScheduleDto>
                {
                Start = DateTime.Today.AddDays(1).AddHours(13),
                End = DateTime.Today.AddDays(1).AddHours(14),
                Data = new ScheduleDto { }
                }
            }
        };
}