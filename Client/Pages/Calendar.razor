@page "/calendar"
@using Microsoft.AspNetCore.Authorization
@using Shared.DTOs.CRM
@inject IHttpClientFactory HttpClientFactory
@* @attribute [Authorize] *@

<PageTitle>CRM</PageTitle>

<MudText Typo="Typo.h1">Calendar</MudText>

<MudCalendar ShowCurrentTime="true" T="CalendarItem" Items="_events">
    <CellTemplate>
        <div style="width: 100%; height: 100%; border: 2px solid @GetColor(((CustomItem)context).Color)">
            <div style="background-color: @GetColor(((CustomItem)context).Color)"><MudText Style="color: #ffffff;" Typo="Typo.body1" Align="Align.Center">@(((CustomItem)context).Title)</MudText></div>
            <div class="pa-2"><MudText Typo="Typo.body2">@context.Text</MudText></div>
        </div>
    </CellTemplate>
</MudCalendar>

@code {
    private string GetColor(Color color) => $"var(--mud-palette-{color.ToDescriptionString()})";
    private List<CustomItem> _events = new()
    {
        new CustomItem
        {
            Start = DateTime.Today.AddHours(10),
            End = DateTime.Today.AddHours(11),
            Title = "Event today",
            Location = "Over here",
            Text = "This is an event today",
            Color = Color.Secondary
        },
        new CustomItem
        {
            Start = DateTime.Today.AddDays(1).AddHours(11),
            End = DateTime.Today.AddDays(1).AddHours(12.5),
            Title = "Event tomorrow",
            Location = "Over there",
            Text = "This is an event tomorrow",
            Color = Color.Tertiary
        }
    };
    private class CustomItem : CalendarItem
    {
        public string Title { get; set; } = string.Empty;
        public string Location { get; set; } = string.Empty;
        public Color Color { get; set; } = Color.Primary;
    }
}