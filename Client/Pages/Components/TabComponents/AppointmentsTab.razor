@namespace Client.Pages.Components.TabComponents
@using Shared.DTOs.Scheduling
@using MudBlazor

<MudPaper Class="pa-4">
    <MudDataGrid T="ScheduleDto" Items="Appointments ?? new List<ScheduleDto>()" Dense="true" Hover="true" Striped="true" Bordered="true" Filterable="true">
        <Columns>
            <PropertyColumn Property="x => x.StartTime" Title="Start" />
            <PropertyColumn Property="x => x.EndTime" Title="End" />
            <PropertyColumn Property="x => x.Title" />
            <PropertyColumn Property="x => x.Description" />
            <PropertyColumn Property="x => x.Status" />
        </Columns>
        <NoRecordsContent>
            <MudText>No appointments found.</MudText>
        </NoRecordsContent>
    </MudDataGrid>
</MudPaper>

@code {
    [Parameter] public List<ScheduleDto> Appointments { get; set; } = new List<ScheduleDto>();
}