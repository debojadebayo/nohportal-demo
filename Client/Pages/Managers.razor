@using MudBlazor
@using Shared.DTOs.CRM

<MudDataGrid Items="@ManagersList" Hover="true" Dense="true" Bordered="false" Striped="true">
    <Columns>
        <PropertyColumn Property="UserName" Title="User Name" />
        <PropertyColumn Property="Role" Title="Role" />
        <PropertyColumn Property="Phone" Title="Phone" />
        <PropertyColumn Property="Email" Title="E-Mail" />
        <PropertyColumn Property="UserType" Title="User Type" />
    </Columns>
</MudDataGrid>

<MudText Class="mt-4" Color="Color.Primary" Style="cursor:pointer;">
    <MudIcon Icon="@Icons.Material.Filled.Add" /> Add New User
</MudText>

@code {
    [Parameter]
    public List<ManagerDto> ManagersList { get; set; } = new();
}
