{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/Client"
        },
        {
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/Client"
        },
        {
            "name": "Debug .NET Core in Docker",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "sourceFileMap": {
                "/app": "${workspaceRoot}/"
            },
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "Server"
                ],
                "quoteArgs": false,
                "debuggerPath": "/vsdbg/vsdbg"
            }
        },
        {
            "name": "Debug Playwright Tests",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Client.Tests/Client.Tests.csproj",
                "--settings",
                "${workspaceFolder}/Client.Tests/playwright.runsettings",
                "--",
                "Playwright.LaunchOptions.Headless=false"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Debug Single Playwright Test",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Client.Tests/Client.Tests.csproj",
                "--filter",
                "${input:testFilter}",
                "--settings",
                "${workspaceFolder}/Client.Tests/playwright.runsettings",
                "--",
                "Playwright.LaunchOptions.Headless=false"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "description": "Test filter (e.g., TestMethodName or FullyQualifiedName~TestMethodName)",
            "default": "",
            "type": "promptString"
        }
    ]
}